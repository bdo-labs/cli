#!/usr/bin/env bash

cmd=$(basename $0)
shortusage="$cmd <repository>"
url=git@github.com:bdo-labs

#
# Output usage
#

usage() {
  cat << EOT

  Usage: $shortusage

  Options:

    All of the git-clone options are persisted onto this interface.
    See 'git help clone'

    -h, --help          output usage information

EOT
}

#
# Clone repository
#

clone() {
  local repo=$1; shift
  local opts=$*
  command git clone $url/$repo $opts
  cd $repo
}

#
# Parse arguments
#

while test $# -ne 0; do
  arg=$1; shift
  case $arg in
    __shortusage)
      echo "$shortusage"
      exit 0
      ;;
    __description)
      echo "clone repository from bdoÂ´s github account"
      exit 0
      ;;
    -h|--help)
      usage
      exit 0
      ;;
    *)
      clone $arg $*
      exit $?
      ;;
  esac
done
usage && exit 1

