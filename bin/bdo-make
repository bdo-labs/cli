#!/usr/bin/env bash

cmd=$(basename $0)
shortusage="$cmd"

#
# Output usage
#

usage() {
  cat << EOT

  Usage: $shortusage

  Options:

    -h, --help          output usage information

EOT
}

#
# Run make for all local dependencies
#

makelocals() {
  local cwd=$CWD
  local targets=$*
  local deps=$(ls -1F node_modules | grep '@$')
  deps=${deps%?}
  for dep in $deps; do
    cd ../$dep && make $targets
    cd $cwd
  done
  make $targets
}

#
# Parse arguments
#

while test $# -ne 0; do
  arg=$1; shift
  case $arg in
    __shortusage)
      echo "$shortusage"
      exit 0
      ;;
    __description)
      echo "run make for all local dependencies"
      exit 0
      ;;
    -h|--help)
      usage
      exit 0
      ;;
  esac
done

makelocals $*
exit $?

